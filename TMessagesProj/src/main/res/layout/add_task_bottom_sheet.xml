<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:text=""
            android:textColor="@color/holo_blue_bright"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_task_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_click_add_task_top"
            android:padding="8dp"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/disabled_save_task_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_task_save">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_task_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionNone"
                    android:inputType="textCapSentences|text|textMultiLine"
                    android:paddingLeft="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/tv_first_empty_row"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lighter_gray"
                    android:textColor="@color/add_task_text_color"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_task_description" />

                <TextView
                    android:id="@+id/tv_label_person_in_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_first_empty_row" />

                <Button
                    android:id="@+id/tv_select_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_click"
                    android:drawableEnd="@drawable/ic_select_member"
                    android:drawableRight="@drawable/ic_select_member"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_label_person_in_charge" />

                <View
                    android:id="@+id/tv_team_empty_row"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lighter_gray"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_select_members" />

                <TextView
                    android:id="@+id/tv_label_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/team_spinner"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_team_empty_row" />

                <!--                <Spinner-->
                <!--                    android:id="@+id/team_spinner"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginBottom="5dp"-->
                <!--                    android:visibility="gone"-->
                <!--                    app:layout_constraintBottom_toTopOf="@+id/tv_second_empty_row"-->
                <!--                    app:layout_constraintLeft_toLeftOf="parent"-->
                <!--                    app:layout_constraintRight_toRightOf="parent"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/tv_label_team" />-->
                <TextView
                    android:id="@+id/team_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_click"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_second_empty_row"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_team" />

                <View
                    android:id="@+id/tv_second_empty_row"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lighter_gray"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/team_spinner" />

                <TextView
                    android:id="@+id/tv_label_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Статус"
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_second_empty_row" />

                <TextView
                    android:id="@+id/et_task_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_click"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_status" />

                <View
                    android:id="@+id/tv_third_empty_row"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/lighter_gray"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_task_status" />


                <TextView
                    android:id="@+id/tv_label_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Срок"
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_third_empty_row" />

                <LinearLayout
                    android:id="@+id/ll_task_deadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_deadline">

                    <TextView
                        android:id="@+id/btn_task_deadline_today"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Сегодня"
                        android:textColor="@color/disabled_text_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/btn_task_deadline_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:padding="10dp"
                        android:text="Завтра"
                        android:textColor="@color/disabled_text_color"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_task_calendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/btn_click"
                        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="12/12/9999"
                        android:textColor="@color/disabled_text_color" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_label_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:text="Напоминание"
                    android:textColor="@color/holo_blue_bright"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_task_deadline" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_task_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_label_reminder">

                    <ImageView
                        android:id="@+id/btn_task_reminder_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:src="@drawable/msg_addbot"
                        android:text="Add"
                        android:textColor="@color/disabled_text_color"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/btn_task_reminder_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple"
                        android:padding="10dp"
                        android:scaleType="center"
                        android:src="@drawable/msg_delete"
                        android:text="Delete"
                        android:textColor="@color/disabled_text_color"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:tint="@color/testing_dark" />

                    <TextView
                        android:id="@+id/tv_reminder_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:background="@drawable/ripple"
                        android:padding="10dp"
                        android:text="12/12/12"
                        android:textColor="@color/disabled_text_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</LinearLayout>