<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightReplyLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/ripple"
    android:orientation="horizontal">

    <View
        android:id="@+id/replyVerticalLine"
        android:layout_width="2dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="4dp"
        android:background="@color/key_chat_outReplyLine" />

    <TextView
        android:id="@+id/replyUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="12dp"
        android:lines="1"
        android:text=""
        android:textColor="@color/key_chat_outReplyNameText" />

    <TextView
        android:id="@+id/replyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Deleted message"
        android:textColor="@color/black" />
</FrameLayout>
