<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mid"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/task_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/key_chat_emojiPanelStickerSetNameHighlight"
            android:padding="5dp"
            android:text="Все"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/task_todo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Надо сделать"
            android:textColor="@color/white"

            android:textSize="10sp" />

        <Button
            android:id="@+id/task_doing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:padding="5dp"
            android:singleLine="true"
            android:text="В работе"
            android:textColor="@color/white"

            android:textSize="10sp" />

        <Button
            android:id="@+id/task_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Выполнено"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/task_archive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_click"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Архив"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>
</HorizontalScrollView><!--</LinearLayout>-->
